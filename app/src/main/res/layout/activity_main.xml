<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.alex.ripplewaveview.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <github.alex.ripplewaveview.RippleSpreadView
            xmlns:RippleWaveView="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            RippleWaveView:rsv_innerAnimDuration="3000"
            RippleWaveView:rsv_innerCircleColor="#7E57C2"
            RippleWaveView:rsv_innerSize="120dp"
            RippleWaveView:rsv_outAnimDuration="3000"
            RippleWaveView:rsv_outSize="240dp"/>
    </LinearLayout>
</RelativeLayout>
